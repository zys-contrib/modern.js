{
  "name": "@modern-js/testing-plugin-bff",
  "description": "The meta-framework suite designed from scratch for frontend-focused modern web development.",
  "homepage": "https://modernjs.dev",
  "bugs": "https://github.com/modern-js-dev/modern.js/issues",
  "repository": "modern-js-dev/modern.js",
  "license": "MIT",
  "keywords": [
    "react",
    "framework",
    "modern",
    "modern.js"
  ],
  "version": "1.5.0",
  "jsnext:source": "./src/index.ts",
  "types": "./src/index.ts",
  "main": "./dist/js/node/index.js",
  "module": "./dist/js/treeshaking/index.js",
  "jsnext:modern": "./dist/js/modern/index.js",
  "exports": {
    ".": {
      "node": {
        "jsnext:source": "./src/index.ts",
        "import": "./dist/js/modern/index.js",
        "require": "./dist/js/node/index.js"
      },
      "default": "./dist/js/treeshaking/index.js"
    }
  },
  "scripts": {
    "prepare": "pnpm build",
    "prepublishOnly": "only-allow-pnpm && pnpm build --platform",
    "new": "modern new",
    "dev": "modern build --watch",
    "build": "wireit",
    "test": "wireit"
  },
  "dependencies": {
    "@babel/runtime": "^7.18.0",
    "@modern-js/bff-core": "workspace:^1.1.2",
    "@modern-js/server": "workspace:^1.5.1",
    "@modern-js/utils": "workspace:^1.7.12",
    "jest-environment-node": "^27.2.2",
    "path-to-regexp": "^6.2.0",
    "supertest": "^6.1.6"
  },
  "devDependencies": {
    "@modern-js/bff-utils": "workspace:*",
    "@modern-js/core": "workspace:*",
    "@modern-js/testing": "workspace:*",
    "@scripts/build": "workspace:*",
    "@scripts/jest-config": "workspace:*",
    "@types/jest": "^27",
    "@types/node": "^14",
    "@types/react": "^17",
    "@types/react-dom": "^17",
    "@types/supertest": "^2.0.11",
    "jest": "^28.1.1",
    "typescript": "^4"
  },
  "peerDependencies": {
    "@modern-js/bff-utils": "workspace:^1.3.0",
    "@modern-js/testing": "workspace:^1.5.4"
  },
  "sideEffects": false,
  "modernConfig": {},
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public",
    "types": "./dist/types/index.d.ts"
  },
  "wireit": {
    "build": {
      "command": "modern build",
      "files": [
        "src/**/*",
        "tsconfig.json",
        "package.json"
      ],
      "output": [
        "dist/**/*"
      ]
    },
    "test": {
      "command": "jest --passWithNoTests",
      "files": [
        "src/**/*",
        "tsconfig.json",
        "package.json",
        "tests/**/*"
      ],
      "output": []
    }
  }
}
