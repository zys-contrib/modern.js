{
  "name": "@modern-js/app-tools",
  "description": "The meta-framework suite designed from scratch for frontend-focused modern web development.",
  "homepage": "https://modernjs.dev",
  "bugs": "https://github.com/modern-js-dev/modern.js/issues",
  "repository": "modern-js-dev/modern.js",
  "license": "MIT",
  "keywords": [
    "react",
    "framework",
    "modern",
    "modern.js"
  ],
  "version": "1.7.0",
  "jsnext:source": "./src/index.ts",
  "types": "./src/index.ts",
  "main": "./dist/js/node/index.js",
  "module": "./dist/js/treeshaking/index.js",
  "jsnext:modern": "./dist/js/modern/index.js",
  "exports": {
    ".": {
      "node": {
        "jsnext:source": "./src/index.ts",
        "import": "./dist/js/modern/index.js",
        "require": "./dist/js/node/index.js"
      },
      "default": "./dist/js/treeshaking/index.js"
    },
    "./cli": {
      "jsnext:source": "./src/index.ts",
      "default": "./dist/js/node/index.js"
    },
    "./types": {
      "jsnext:source": "./lib/types.d.ts",
      "default": "./lib/types.d.ts"
    },
    "./server": {
      "jsnext:source": "./src/exports/server.ts",
      "default": "./dist/js/node/exports/server.js"
    }
  },
  "typesVersions": {
    "*": {
      ".": [
        "./dist/types/index.d.ts"
      ],
      "types": [
        "./lib/types.d.ts"
      ],
      "server": [
        "./dist/types/exports/server.d.ts"
      ]
    }
  },
  "bin": {
    "modern": "./bin/modern.js"
  },
  "scripts": {
    "prepare": "pnpm build",
    "prepublishOnly": "only-allow-pnpm && pnpm build -- --platform",
    "new": "modern new",
    "dev": "modern build --watch",
    "build": "wireit",
    "test": "wireit"
  },
  "dependencies": {
    "@babel/runtime": "^7.18.0",
    "@modern-js/core": "workspace:^1.13.0",
    "@modern-js/new-action": "workspace:^1.3.12",
    "@modern-js/node-bundle-require": "workspace:^1.3.7",
    "@modern-js/plugin": "workspace:^1.4.1",
    "@modern-js/plugin-analyze": "workspace:^1.5.0",
    "@modern-js/plugin-i18n": "workspace:^1.3.0",
    "@modern-js/plugin-jarvis": "workspace:^1.2.14",
    "@modern-js/prod-server": "workspace:^1.2.0",
    "@modern-js/server": "workspace:^1.5.1",
    "@modern-js/types": "workspace:^1.6.0",
    "@modern-js/utils": "workspace:^1.7.12",
    "@modern-js/webpack": "workspace:^1.12.0"
  },
  "devDependencies": {
    "@modern-js/server-core": "workspace:*",
    "@scripts/build": "workspace:*",
    "@scripts/jest-config": "workspace:*",
    "@types/jest": "^27",
    "@types/node": "^14",
    "@types/react": "^17",
    "@types/react-dom": "^17",
    "jest": "^27",
    "typescript": "^4"
  },
  "sideEffects": false,
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public",
    "types": "./dist/types/index.d.ts"
  },
  "wireit": {
    "build": {
      "command": "modern build",
      "files": [
        "src/**/*",
        "tsconfig.json",
        "package.json"
      ],
      "output": [
        "dist/**/*"
      ]
    },
    "test": {
      "command": "jest --passWithNoTests",
      "files": [
        "src/**/*",
        "tsconfig.json",
        "package.json",
        "tests/**/*"
      ],
      "output": []
    }
  }
}
