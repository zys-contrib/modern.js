{
  "name": "@modern-js/generator-plugin-plugin",
  "description": "The meta-framework suite designed from scratch for frontend-focused modern web development.",
  "homepage": "https://modernjs.dev",
  "bugs": "https://github.com/modern-js-dev/modern.js/issues",
  "repository": "modern-js-dev/modern.js",
  "license": "MIT",
  "keywords": [
    "react",
    "framework",
    "modern",
    "modern.js"
  ],
  "version": "1.2.4",
  "jsnext:source": "./src/index.ts",
  "main": "./dist/js/node/index.js",
  "files": [
    "/templates",
    "/dist/js/node/main.js"
  ],
  "meta": {
    "key": "generator-plugin",
    "name": "生成器插件",
    "type": "module"
  },
  "scripts": {
    "prepare": "pnpm build && pnpm build:csmith",
    "prepublishOnly": "only-allow-pnpm && pnpm build --platform",
    "new": "modern new",
    "build": "wireit",
    "build:csmith": "wireit",
    "test": "wireit"
  },
  "dependencies": {
    "vm2": "^3.9.2"
  },
  "devDependencies": {
    "@babel/runtime": "^7.18.0",
    "@modern-js/generator-common": "workspace:*",
    "@modern-js/generator-plugin": "workspace:*",
    "@modern-js/plugin-i18n": "workspace:*",
    "@types/jest": "^27",
    "@types/node": "^14",
    "typescript": "^4",
    "@scripts/build": "workspace:*",
    "@modern-js/codesmith-tools": "^1.2.1",
    "jest": "^27",
    "@scripts/jest-config": "workspace:*"
  },
  "sideEffects": false,
  "modernConfig": {
    "output": {
      "packageMode": "node-js",
      "disableSourceMap": true
    }
  },
  "publishConfig": {
    "main": "./dist/js/node/main.js",
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "types": "./src/index.ts",
  "wireit": {
    "build": {
      "command": "modern build",
      "files": [
        "src/**/*",
        "tsconfig.json",
        "package.json"
      ],
      "output": [
        "dist/**/*",
        "!dist/node/main.js"
      ]
    },
    "build:csmith": {
      "command": "csmith-tools build",
      "files": [
        "src/**/*",
        "tsconfig.json",
        "package.json"
      ],
      "output": [
        "dist/node/main.js"
      ]
    },
    "test": {
      "command": "jest --passWithNoTests",
      "files": [
        "src/**/*",
        "tsconfig.json",
        "package.json",
        "tests/**/*"
      ],
      "output": []
    }
  }
}
