{
  "name": "@modern-js/cloud-deploy-generator",
  "version": "1.2.5",
  "description": "The meta-framework suite designed from scratch for frontend-focused modern web development.",
  "homepage": "https://modernjs.dev",
  "bugs": "https://github.com/modern-js-dev/modern.js/issues",
  "repository": "modern-js-dev/modern.js",
  "license": "MIT",
  "keywords": [
    "react",
    "framework",
    "modern",
    "modern.js"
  ],
  "jsnext:source": "./src/index.ts",
  "main": "./dist/js/node/index.js",
  "files": [
    "/templates",
    "/dist/js/node/main.js"
  ],
  "scripts": {
    "prepare": "pnpm build && pnpm build:csmith",
    "prepublishOnly": "only-allow-pnpm && pnpm build --platform",
    "new": "modern new",
    "build": "wireit",
    "build:csmith": "wireit",
    "test": "wireit"
  },
  "devDependencies": {
    "@babel/runtime": "^7.18.0",
    "@scripts/build": "workspace:*",
    "@modern-js/plugin-jarvis": "workspace:*",
    "@modern-js/codesmith": "^1.3.0",
    "@modern-js/codesmith-tools": "^1.2.1",
    "@modern-js/codesmith-api-app": "^1.2.5",
    "@modern-js/codesmith-api-json": "^1.2.2",
    "@modern-js/generator-common": "workspace:*",
    "@modern-js/generator-utils": "workspace:*",
    "@modern-js/dependence-generator": "workspace:*",
    "typescript": "^4",
    "@types/jest": "^27",
    "@types/node": "^14",
    "jest": "^27",
    "@scripts/jest-config": "workspace:*"
  },
  "sideEffects": [
    "*.css",
    "*.less",
    "*.sass",
    "*.scss"
  ],
  "publishConfig": {
    "main": "./dist/js/node/main.js",
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "types": "./src/index.ts",
  "wireit": {
    "build": {
      "command": "modern build",
      "files": [
        "src/**/*",
        "tsconfig.json",
        "package.json"
      ],
      "output": [
        "dist/**/*",
        "!dist/node/main.js"
      ]
    },
    "build:csmith": {
      "command": "csmith-tools build",
      "files": [
        "src/**/*",
        "tsconfig.json",
        "package.json"
      ],
      "output": [
        "dist/node/main.js"
      ]
    },
    "test": {
      "command": "jest --passWithNoTests",
      "files": [
        "src/**/*",
        "tsconfig.json",
        "package.json",
        "tests/**/*"
      ],
      "output": []
    }
  }
}
